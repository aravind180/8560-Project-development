<%- include('layouts/header'); -%>
<body>
    <%- include('layouts/nav'); -%>
    <section class="centered">
        <table border="1" class="table">
            <tr>
                <th>Customer name:</th>
                <td><%= customer.name %></td>
            </tr>
            <tr>
                <th>Customer address:</th>
                <td><%= customer.address %></td>
            </tr>
            <tr>
                <th>Customer city:</th>
                <td><%= customer.city %></td>
            </tr>
            <tr>
                <th>Customer Province:</th>
                <td><%= customer.province %></td>
            </tr>
            <tr>
                <th>Customer email:</th>
                <td><%= customer.email %></td>
            </tr>
            <br>

        </table>
            <table border="1" class="table">
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Tax (<%= customer.tax %>%)</th>
                </tr>
                <% customer['cart'].forEach(function(item){ %>
                    <tr class="child">
                        <td><%= item.id %></td>
                        <td><%= item.qty %></td>
                        <td>$<%= item.rowPrice %></td>
                        <td><%= item.rowTax %></td>
                    </tr>
                <% }); %>
                <tr class="child">
                    <td colspan="2">Total price</td>
                    <td colspan="1">$<%= customer.totalPrice %></td>
                </tr>
                <tr>
                    <td colspan="2">Total Tax</td>
                    <td>$<%= customer.totalTax %></td>

                </tr>
                <tr class="child">
                    <td colspan="3"> Delivery charge: $<%= customer.delCharge %></td>
                </tr>
                <tr>
                    <td colspan="2">Grand Total</td>
                    <td>$<%= customer.totalPrice + customer.totalTax + customer.delCharge %></td>
                </tr>
            </table>
        </div>
    </section>
<div class="clear"></div>
</body>
<%- include('layouts/footer'); -%>





